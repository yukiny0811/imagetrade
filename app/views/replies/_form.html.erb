<%= form_with(model: reply) do |form| %>
  <% if reply.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reply.errors.count, "error") %> prohibited this reply from being saved:</h2>

      <ul>
        <% reply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="display:none;">
    <%= form.label :id_of_user %>
    <%= form.text_field :id_of_user, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label :reply_string %>
    <%= form.text_field :reply_string %>
  </div>
  
  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :post_id %>
    <%= form.number_field :post_id, value: params[:id] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
